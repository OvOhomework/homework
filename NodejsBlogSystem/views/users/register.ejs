<%- include('../partials/_navbar.ejs') %>

<div class="regBkg ">
	<div class="regBkgMask">
	<div class="register-position">
    <div class="register-input">
        <div class="container">
            <h3 class="font-weight-bold text-center mb-3">
                <i class="fas fa-user-plus"></i> 用户注册
            </h3>
        
            <form action="/users/register" method="POST">
                <div class="form-group">
                <input type="text" name="name" placeholder="用户名" value="<%= typeof (name) != 'undefined' ? name : '' %>"  class="form-control" 
                    required />
                </div>
        
                <div class="form-group">
                <input type="email" placeholder="电子邮箱" name="email" value="<%= typeof (email) != 'undefined' ? email : '' %>"  class="form-control" 
                    required />
                </div>
        

                <div class="form-group">
                <input type="password" name="password" placeholder="密码" 
                    value="<%= typeof (password) != 'undefined' ? password : '' %>"  class="form-control"  required />
                </div>
        
                <div class="form-group">
                        <input type="password" name="confirmPassword" placeholder="重新输入密码..."
                            value="<%= typeof (confirmPassword) != 'undefined' ? confirmPassword : '' %>"  class="form-control"  required />
                </div>
                
         
                <button class="btn btn-success btn-block" type="submit">注册</button>
        
            </form>
            <p class="lead mt-4">已有账户? <a href="/users/login">登录</a></p>
            <br>
     
        
        </div>

        <%- include('../partials/_messages.ejs') %>
    </div>
	</div>
   </div>

